@model IEnumerable<WebApplication1.Models.Entities.Transaction>

@{
    ViewData["Title"] = "Transactions";
}

<div class="container mt-4">
    <h2>Transactions</h2>
    <p>
        <a asp-action="Create" class="btn btn-primary">Create New Transaction</a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Date</th>
                <th>Description</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Account</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Date.ToShortDateString()</td>
                    <td>@item.Description</td>
                    <td>@item.Amount.ToString("C")</td>
                    <td>@(item.Category?.Name ?? "N/A")</td>
                    <td>@(item.Account?.AccountName ?? "N/A")</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TransactionID" class="btn btn-sm btn-warning">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div> 